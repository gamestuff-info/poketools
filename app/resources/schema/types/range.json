{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/types/range.json",
  "title": "Integer range",
  "description": "A range of integers defined as two integers separated by a hyphen.",
  "examples": [
    "\"0-9\"",
    "\"-5-20\"",
    "\"-100--50\""
  ],
  "type": "string",
  "minLength": 3,
  "pattern": "^([0-9]+)-([0-9]+)$"
}
