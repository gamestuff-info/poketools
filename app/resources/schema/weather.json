{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://poketools.gamestuff.info/data/schema/weather.json",
  "title": "Weather Condition",
  "description": "Weather Conditions",
  "type": "object",
  "properties": {
    "identifier": {
      "$ref": "types/identifier.json"
    },
    "name": {
      "$ref": "types/name.json"
    },
    "battle_only": {
      "title": "Is battle only",
      "type": "integer",
      "enum": [
        0,
        1
      ]
    }
  },
  "additionalProperties": false,
  "required": [
    "identifier",
    "name",
    "battle_only"
  ]
}
